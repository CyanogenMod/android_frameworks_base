<!-- This is a view that shows general status information in Keyguard. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@id/clock"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextClock android:id="@id/clock"
        android:textColor="@color/clock_white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="@string/keyguard_date_12_hours_format"
        android:format24Hour="@string/keyguard_date_24_hours_format"
        style="@style/new_style"
        />
    </LinearLayout>
    <TextClock android:id="@+id/date_view"
        android:textColor="@color/clock_white"
        android:gravity="center"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_below="@id/clock"
        style="@style/widget_label"
        />
    <TextView android:id="@+id/alarm_status"
        android:textColor="@color/clock_gray"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="6.0dip"
        android:layout_below="@id/clock"
        android:drawableStart="@drawable/ic_access_alarms_big"
        style="@style/new_style"
        />
</LinearLayout>

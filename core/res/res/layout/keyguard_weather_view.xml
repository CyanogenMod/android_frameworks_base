<com.android.internal.policy.impl.keyguard.KeyguardWeather
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyguard_weather_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/keyguard_weather_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="8dip"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/keyguard_weather_image"
        android:orientation="horizontal"
        android:padding="4dip" >

        <TextView
            android:id="@+id/keyguard_weather_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/keyguard_weather_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/keyguard_weather_city"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/keyguard_weather_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@id/keyguard_weather_condition"
            android:layout_alignParentRight="true"
            android:textSize="8sp"
            android:textColor="?android:attr/textColorSecondary" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/keyguard_weather_temps_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/keyguard_weather_image"
        android:orientation="horizontal"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/keyguard_weather_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary" />

        <ImageView
            android:id="@+id/keyguard_weather_divider"
            android:layout_below="@id/keyguard_weather_temp"
            android:layout_width="44dip"
            android:layout_height="1dip"
            android:background="@android:drawable/divider_horizontal_dark" />

        <TextView
            android:id="@+id/keyguard_weather_low_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/keyguard_weather_divider"
            android:layout_centerHorizontal="true"
            android:paddingTop="2dip"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorPrimary" />

    </RelativeLayout>

</com.android.internal.policy.impl.keyguard.KeyguardWeather>